extends ../layout
block content
    .container
        .row
            .col-md-9
                embed(src="#{movie.flash}", type="application/x-shockwave-flash", allowFullScreen="true", quality="high", width="720", height="600", align="middle")
            .col-md-3
                dl.dl-horizontal
                    dt 电影名字
                    dd= movie.title
                    dt 导演
                    dd= movie.director
                    dt 国家
                    dd= movie.country
                    dt 语言
                    dd= movie.language
                    dt 上映年份
                    dd= movie.year
                    dt 简介
                    dd= movie.summary      
                  